<mvc:View
    controllerName="vcp.vcplanner.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:card="sap.ui.integration.widgets"
   >
    <Page id="page" title="{i18n>title}">
        <content>

            <!-- HEADER SECTION -->
            <VBox class="header">
                <HBox class="header-top" alignItems="Center" justifyContent="SpaceBetween">

                    <!-- Logo & Title -->
                    <HBox class="logo-section" alignItems="Center">
                        <Text class="logo"/>
                        <VBox class="title-section">
                            <Title text="VC Planner Dashboard" level="H1"/>
                            <Text text="Sales &amp; Operations Planning for Configurable Products"/>
                        </VBox>
                    </HBox>

                    <!-- Controls -->
                    <HBox class="controls" alignItems="Center" justifyContent="End">
                        
                        <VBox class="control-group">
                            <Label text="Location"/>
                            <Select id="LocationSelect" items="{path: 'locModel>/results'}">
                                <items>
                                    <core:Item key="{locModel>FACTORY_LOC}" text="{locModel>FACTORY_LOC}"/>
                                </items>
                            </Select>
                        </VBox>

                        <VBox class="control-group">
                            <Label text="Product"/>
                            <Select id="productSelect" items="{path: 'locModel>/results'}">
                                <items>
                                    <core:Item key="{locModel>PRODUCT_ID}" text="{locModel>PRODUCT_ID}"/>
                                </items>
                            </Select>
                        </VBox>

                        <VBox class="control-group">
                            <Label text="Version"/>
                            <Select id="idver" forceSelection="true">
                                <core:Item key="v1" text="_BASELINE"/>
                            </Select>
                        </VBox>

                        <VBox class="control-group">
                            <Label text="Scenario"/>
                            <Select id="idser" forceSelection="true">
                                <core:Item key="s1" text="_PLAN"/>
                            </Select>
                        </VBox>

                    </HBox>
                </HBox>
            </VBox>

            <!-- MAIN CONTENT: 3 CARDS -->
            <HBox class="card-container" fitContainer="true" alignItems="Start" justifyContent="SpaceAround" wrap="Wrap">
                <items>
                    <card:Card id="MyCardId" width="400px" height="500px"/>
                    <card:Card id="MyCardId1" width="300px" height="500px"/>
                    <card:Card id="MyCardId2" width="700px" height="500px" manifest=""
                            manifestChanges="[]"/>
                     <Button
            id="quickHelpRibbon"
            text="Quick Help"
            icon="sap-icon://sys-help"
            press="onOpenQuickHelp"
            class="quickHelpRibbon" />                 
                </items>
            </HBox>             
        </content> 
    </Page>
</mvc:View>
